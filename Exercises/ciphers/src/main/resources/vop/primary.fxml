<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<AnchorPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="vop.PrimaryController">
    <VBox><HBox>
        <Label>Besked</Label>
        <TextField fx:id="message"></TextField>
    </HBox>
    <HBox>
        <RadioButton fx:id="atbash">Atbash</RadioButton>
        <RadioButton fx:id="caesar">Caesar</RadioButton>
        <Spinner fx:id="caesarSpinner"></Spinner>
    </HBox>
    <HBox>
        <Button fx:id="encryptButton" onAction="#encryptMessage">Encrypt</Button>
        <TextField fx:id="encryptedMsg"></TextField>
    </HBox>
    <HBox>
        <Button fx:id="decryptButton" onAction="#decryptMessage">Decrypt</Button>
        <TextField fx:id="decryptedMsg"></TextField>
    </HBox>
    </VBox>
</AnchorPane>
